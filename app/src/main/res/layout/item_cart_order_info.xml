<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/cbx_select_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_order"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/cbx_select_item" />

    <TextView
        android:id="@+id/txt_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_order"
        android:textSize="16dp"
        android:text="测试联想（Lenovo）拯救者14.0英寸游戏本（i7-4720HQ 4G 1T硬盘 GTX960M 2G独显 FHD IPS屏 背光键盘）黑" />

    <com.example.my_shop.bean.NumberAddSubView
        android:id="@+id/nas_order_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_order_title"
        android:layout_alignLeft="@+id/txt_order_title"
        android:layout_marginRight="20dp"
        app:default_value="1"
        app:max_value="10"
        app:min_value="1" />

    <TextView
        android:id="@+id/txt_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nas_order_count"
        android:layout_alignRight="@+id/txt_order_title"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textColor="@color/darkred"
        android:text="$222.0" />
</RelativeLayout>
