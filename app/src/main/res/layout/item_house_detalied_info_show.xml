<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_house_detalied_info_show_picture"
            android:layout_width="match_parent"
            android:layout_height="160dp" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_follow"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_house_detalied_info_show_count_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/img_house_detalied_info_show_picture" />
        <TextView
            android:id="@+id/txt_house_detalied_info_show_describe_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_house_detalied_info_show_count_picture"
            android:layout_below="@+id/img_house_detalied_info_show_picture"
            android:textSize="18dp"
            android:text="aaaaa"/>
        <TextView
            android:id="@+id/txt_house_detalied_info_show_describe_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_house_detalied_info_show_count_picture"
            android:textSize="10dp"
            android:text="eeeee"/>
    </RelativeLayout>
</LinearLayout>
